---
import Header from "@/components/templates/Header/Header.astro";
import Footer from "@/components/templates/Footer/Footer.astro";
import FloatingWhatsappButton from "@/components/ui/FloatingWhatsappButton/FloatingWhatsappButton.astro";
import envs from "@/config/envs";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Contrato Ya te ofrece servicios legales digitales para crear contratos adaptados a la normativa actual. Disfruta de la comodidad de gestionar tus documentos desde cualquier lugar, con la seguridad de que tu información está protegida"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			!(function (f, b, e, v, n, t, s) {
				if (f.fbq) return;
				n = f.fbq = function () {
					n.callMethod
						? n.callMethod.apply(n, arguments)
						: n.queue.push(arguments);
				};
				if (!f._fbq) f._fbq = n;
				n.push = n;
				n.loaded = !0;
				n.version = "2.0";
				n.queue = [];
				t = b.createElement(e);
				t.async = !0;
				t.src = v;
				s = b.getElementsByTagName(e)[0];
				s.parentNode.insertBefore(t, s);
			})(
				window,
				document,
				"script",
				"https://connect.facebook.net/en_US/fbevents.js",
			);
			fbq("init", "594530933208717");
			fbq("track", "PageView");
		</script>
	</head>
	<body>
		<noscript
			><img
				height="1"
				width="1"
				style="display:none"
				src="https://www.facebook.com/tr?id=594530933208717&ev=PageView&noscript=1"
			/></noscript
		>
		<Header />
		<slot />
		<FloatingWhatsappButton />
		<Footer />
		<script
			is:inline
			src={`https://www.google.com/recaptcha/api.js?render=${envs.GOOGLE_RECAPTCHA}`}
			async
			defer></script>
	</body>
</html>

<style lang="scss" is:global>
	@import "@/styles/elements/index.scss";
	@import "@/styles/generic/index.scss";
	@import "@/styles/objects/index.scss";
</style>
