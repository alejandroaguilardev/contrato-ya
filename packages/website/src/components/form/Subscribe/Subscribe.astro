---
import envs from "@/config/envs";
import styles from "./subscribe.module.scss";
---

<div class={styles["newsletter"]}>
	<h2 class={styles["newsletter__heading"]}>Subscríbete al boletín</h2>
	<div id="newsletter-alert"></div>
	<form
		class={styles["newsletter__form"]}
		id="newsletter-form"
		method="post"
		data-api-url={envs.HOST_API}
	>
		<input
			type="email"
			name="email"
			placeholder="Email *"
			required
			class={styles["newsletter__form__input"]}
		/>
		<div class={styles["newsletter__form__terms"]}>
			<input
				type="checkbox"
				id="terms-checkbox"
				name="terms"
				class={styles["newsletter__form__terms__checkbox"]}
			/>
			<label for="terms-checkbox">
				Acepto los <a href="/terminos-y-condiciones" target="_blank"
					>términos y condiciones</a
				>
			</label>
		</div>
		<button type="submit" class="btn btn--primary">Subscribe</button>
	</form>
</div>

<script src="./subscribe.ts"></script>
