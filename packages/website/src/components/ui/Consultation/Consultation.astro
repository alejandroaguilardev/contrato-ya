---
import { getCollection } from "astro:content";
import styles from "./consultation.module.scss";

const socialLinks = await getCollection("socialLinks");
const whatstappUrl = socialLinks.find(
	({ data }) => data.platform === "WhatsApp",
)?.data.url;

if (!whatstappUrl) {
	throw new Error("URL not found whatstappUrl");
}
---

<section class={styles["consultation-section"]}>
	<div class="container">
		<div class={styles["consultation-section__content"]}>
			<p class={styles["consultation-section__title"]}>
				Si esta informaci√≥n no resuelve tus preguntas, conversa con
				nosotros.
			</p>
			<a
				href={`${whatstappUrl}?text=Hola%20qu%C3%A9%20tal?%20Necesito`}
				target="_blank"
				class={` ${styles["consultation-section__buttons"]}`}
				aria-label="Conversemos"
			>
				Conversemos
			</a>
		</div>
	</div>
</section>
